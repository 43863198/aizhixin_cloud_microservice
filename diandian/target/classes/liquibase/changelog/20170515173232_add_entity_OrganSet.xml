<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<changeSet id="20170515173232" author="meihua.li">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="DD_ORGAN_SET" />
			</not>
		</preConditions>
		<createTable tableName="DD_ORGAN_SET">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="organ_id" type="bigint" remarks="组织结构ID">
			</column>
			<column name="calCount" type="bigint" defaultValue="11"
				remarks="开始计算学生GPS最少人数">
				<constraints nullable="false" />
			</column>
			<column name="deviation" type="bigint" defaultValue="500"
				remarks="允许偏移的范围">
				<constraints nullable="false" />
			</column>
			<column name="confiLevel" type="bigint" defaultValue="60"
				remarks="置信度">
				<constraints nullable="false" />
			</column>
			<column name="anti_cheating" type="boolean"
				defaultValueBoolean="true" remarks="开启防作弊">
			</column>

			<column name="CREATED_BY" type="BIGINT" remarks="创建人ID" />
			<column name="CREATED_DATE" type="DATETIME" defaultValueDate="${now}"
				remarks="创建时间" />
			<column name="LAST_MODIFIED_BY" type="BIGINT" remarks="最后一次修改人ID" />
			<column name="LAST_MODIFIED_DATE" type="DATETIME"
				defaultValueDate="${now}" remarks="最后一次修改时间" />
			<column name="DELETE_FLAG" type="INT(4)" defaultValueNumeric="0"
				remarks="删除标记(0正常,1删除)" />
		</createTable>
	</changeSet>
</databaseChangeLog>
