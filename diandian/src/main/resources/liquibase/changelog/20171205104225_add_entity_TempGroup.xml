<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <changeSet id="20171205104225" author="meihua">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="DD_TEMPGROUP"/>
            </not>
        </preConditions>
        <createTable tableName="DD_TEMPGROUP">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NAME" type="varchar(200)"/>
            <column name="TEACHER_ID" type="bigint"/>
            <column name="TEACHER_NAME" type="varchar(200)"/>
            <column name="SUBGROUP_NUM" type="int"/>
            <column name="STATUS" type="boolean"/>
            <column name="ORGAN_ID" type="bigint"/>

            <column name="CREATED_BY" type="BIGINT" remarks="创建人ID"/>
            <column name="CREATED_DATE" type="DATETIME" defaultValueDate="${now}"
                    remarks="创建时间"/>
            <column name="LAST_MODIFIED_BY" type="BIGINT" remarks="最后一次修改人ID"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"
                    defaultValueDate="${now}" remarks="最后一次修改时间"/>
            <column name="DELETE_FLAG" type="INT(4)" defaultValueNumeric="0"
                    remarks="删除标记(0正常,1删除)"/>
        </createTable>
        <createIndex indexName="idx_dd_tempgroup_teacherid" tableName="DD_TEMPGROUP"
                     unique="false">
            <column name="teacher_id"></column>
        </createIndex>
        <createIndex indexName="idx_dd_tempgroup_deleteflag" tableName="DD_TEMPGROUP"
                     unique="false">
            <column name="DELETE_FLAG"></column>
        </createIndex>
        <createIndex indexName="idx_dd_tempgroup_status" tableName="DD_TEMPGROUP"
                     unique="false">
            <column name="STATUS"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>
