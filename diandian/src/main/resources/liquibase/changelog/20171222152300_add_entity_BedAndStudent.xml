<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<changeSet id="20171221161500" author="xiagen">
		<createTable tableName="DD_BED_STU" remarks="床铺与学生信息表">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="room_assgin_id" type="bigint" remarks="房间分配id"></column>
			<column name="stu_id" type="bigint" remarks="学生id"></column>
			<column name="bed_id" type="bigint" remarks="床铺id"></column>
			<column name="CREATED_BY" type="BIGINT" remarks="创建人ID" />
			<column name="CREATED_DATE" type="DATETIME" defaultValueDate="${now}"
				remarks="创建时间" />
			<column name="LAST_MODIFIED_BY" type="BIGINT" remarks="最后一次修改人ID" />
			<column name="LAST_MODIFIED_DATE" type="DATETIME"
				defaultValueDate="${now}" remarks="最后一次修改时间" />
			<column name="DELETE_FLAG" type="INT(4)" defaultValueNumeric="0"
				remarks="删除标记(0正常,1删除)" />
		</createTable>
	</changeSet>
</databaseChangeLog>
