<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <!--人数统计 -->
    <changeSet id="20170918135500" author="zhengning">
		<preConditions onFail="MARK_RAN">
	        <not>
	            <tableExists tableName="SP_PEOPLE_COUNT"/>
				<tableExists tableName="SP_PEOPLE_COUNT_DETAIL"/>
	        </not>
	    </preConditions>
        <createTable tableName="SP_PEOPLE_COUNT" remarks="实践人数统计表">
            <column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
           	<column name="CLASS_NAME" type="varchar(120)" remarks="班级名称"/>
           	<column name="CLASS_ID" type="bigint" remarks="班级id"/>
           	<column name="PROFESSIONAL_NAME" type="varchar(120)" remarks="专业"/>
           	<column name="PROFESSIONAL_ID" type="bigint" remarks="专业id"/>
           	<column name="COLLEGE_NAME" type="varchar(120)" remarks="院系名称"/>
           	<column name="COLLEGE_ID" type="bigint" remarks="院系id"/>
			<column name="STU_NUM" type="INT(4)" defaultValueNumeric="0" remarks="学生人数"/>
			<column name="PRACTICE_NUM" type="INT(4)" defaultValueNumeric="0" remarks="实践人数"/>
			<column name="NOT_PRACTICE_NUM" type="INT(4)" defaultValueNumeric="0" remarks="未实践人数"/>
			<column name="ORG_ID" type="BIGINT" remarks="机构id"/>
            <column name="CREATED_DATE" type="DATETIME" defaultValueDate="${now}" remarks="创建时间"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME" defaultValueDate="${now}" remarks="最后一次修改时间"/>
            <column name="DELETE_FLAG" type="INT(4)" defaultValueNumeric="0" remarks="删除标记(0正常,1删除)"/>
        </createTable>
        
        <createTable tableName="SP_PEOPLE_COUNT_DETAIL" remarks="班级实践详情表">
            <column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
           	<column name="JOB_NUM" type="varchar(60)" remarks="学号"/>
           	<column name="STUDENT_ID" type="bigint" remarks="学生id"/>
           	<column name="STUDENT_NAME" type="VARCHAR(80)" remarks="学生名称"/>
            <column name="STUDENT_SEX" type="VARCHAR(10)" remarks="学生性别"/>
            <column name="STUDENT_PHONE" type="VARCHAR(30)" remarks="学生手机号"/>
			<column name="ENTERPRISE_NAME" type="varchar(100)" remarks="实践企业名称"/>
			<column name="ORG_ID" type="BIGINT" remarks="机构id"/>
			<column name="MENTOR_ID" type="bigint" remarks="导师id"/>
			<column name="MENTOR_NAME" type="VARCHAR(80)" remarks="导师名称"/>
			<column name="MENTOR_PHONE" type="VARCHAR(10)" remarks="导师手机号"/>
			<column name="WHETHER_PRACTICE" type="VARCHAR(10)" remarks="是否参加实践"/>
            <column name="CREATED_DATE" type="DATETIME" defaultValueDate="${now}" remarks="创建时间"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME" defaultValueDate="${now}" remarks="最后一次修改时间"/>
            <column name="DELETE_FLAG" type="INT(4)" defaultValueNumeric="0" remarks="删除标记(0正常,1删除)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
